/* pages/collect/index.wxss */
.collectwrap .row {
  display: flex;
  padding: 20rpx;
}
.collectwrap .row .logo {
  flex: 1;
  width: 100%;
}
.collectwrap .row .right {
  flex: 3;
  text-align: right;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding: 10rpx 6rpx;
}
.collectwrap .row .right .goodsname {
  font-size: 28rpx;
  text-align: left;
}
.collectwrap .row .right .goodsprice {
  font-size: 32rpx;
  color: var(--themeColor);
}

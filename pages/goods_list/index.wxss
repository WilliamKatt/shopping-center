/* pages/goods_list/index.wxss */
.firsttab .itemgroup {
  display: flex;
  border-bottom: 2rpx solid #ccc;
}
.firsttab .itemgroup .itemimage {
  flex: 2;
  justify-content: center;
  align-items: center;
}
.firsttab .itemgroup .itemimage image {
  width: 70%;
}
.firsttab .itemgroup .itemgoods {
  flex: 3;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.firsttab .itemgroup .itemgoods .itemgoodsname {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}
.firsttab .itemgroup .itemgoods .itemgoodsprice {
  color: var(--themeColor);
}

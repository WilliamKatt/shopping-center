page {
  background-color: #efefff;
}
.titlewrap .btnitem {
  height: 45vh;
  background-color: var(--themeColor);
  display: flex;
  justify-content: center;
  align-items: center;
}
.titlewrap .btnitem .btnlogin {
  border: 2rpx solid #000;
  width: 200rpx;
  height: 100rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 10rpx;
}
.titlewrap .logoitem {
  height: 50vh;
  position: relative;
  display: flex;
  justify-content: center;
  align-items: center;
  overflow: hidden;
}
.titlewrap .logoitem .bgimg {
  width: 100%;
  height: 60vh;
  position: absolute;
  z-index: -1;
  left: 0;
  top: 0;
  filter: blur(10rpx);
}
.titlewrap .logoitem .userinfo {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.titlewrap .logoitem .userinfo .logo {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
}
.titlewrap .logoitem .userinfo .username {
  margin-top: 16rpx;
  color: #fff;
  font-size: 32rpx;
  font-weight: 600;
}
.centerwrap {
  height: 55vh;
  position: relative;
}
.centerwrap .contentwrap {
  width: 90%;
  height: 100%;
  position: absolute;
  left: 5%;
  top: -80rpx;
}
.centerwrap .contentwrap .firstrow {
  background-color: #fff;
  display: flex;
  padding: 6rpx 0;
}
.centerwrap .contentwrap .firstrow .item {
  flex: 1;
  text-align: center;
}
.centerwrap .contentwrap .firstrow .item .num {
  font-size: 28rpx;
  color: var(--themeColor);
}
.centerwrap .contentwrap .firstrow .item .itemname {
  font-size: 28rpx;
}
.centerwrap .contentwrap .orderrow {
  padding: 16rpx 0;
  background-color: #fff;
  margin-top: 12rpx;
}
.centerwrap .contentwrap .orderrow .ordertitle {
  padding: 0 16rpx;
  font-size: 28rpx;
}
.centerwrap .contentwrap .orderrow .ordercontent {
  display: flex;
}
.centerwrap .contentwrap .orderrow .ordercontent .orderitem {
  flex: 1;
  text-align: center;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  font-size: 28rpx;
}
.centerwrap .contentwrap .orderrow .ordercontent .orderitem .iconfont {
  font-size: 40rpx;
}
.centerwrap .contentwrap .row {
  padding: 6rpx 16rpx;
  background-color: #fff;
  margin-top: 6rpx;
  font-size: 28rpx;
}
.centerwrap .contentwrap .addressrow {
  margin-top: 12rpx;
}
.centerwrap .contentwrap .contactrow {
  display: flex;
  justify-content: space-between;
  margin-top: 12rpx;
}
.centerwrap .contentwrap .sharesrow {
  margin-top: 12rpx;
}
